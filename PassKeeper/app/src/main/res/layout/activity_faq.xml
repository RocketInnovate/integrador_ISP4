<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/faq_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo_faq"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"
                android:gravity="center"
                android:textColor="#1090cb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/faq_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="#1090cb"/>

            <TextView
                android:id="@+id/faq_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a1"
                 android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/faq_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="#1090cb"/>

            <TextView
                android:id="@+id/faq_answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a2"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/faq_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="#1090cb"/>

            <TextView
                android:id="@+id/faq_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a3"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/faq_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="#1090cb"/>

            <TextView
                android:id="@+id/faq_answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a4"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/faq_title5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="#1090cb"/>

            <TextView
                android:id="@+id/faq_answer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a5"
                android:paddingBottom="16dp" />






        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>